// ----------------------------- Labels -----------------------------

MAP:Taxiways
AIRPORT:EDFH
FOLDER:Labels
ACTIVE:1
ZOOM:400
{{ data.edfh_layout['layout']['Labels']['Buffer'] | to_multipoly('', 'layout-taxiway') }}
FONTSIZE:=:10
COLOR:layout-label-taxiway
{% for taxiway, geom in data.edfh_layout['layout']['Labels']['Taxiways'].items() %}
{{- geom | to_text(taxiway) }}
{% endfor %}

