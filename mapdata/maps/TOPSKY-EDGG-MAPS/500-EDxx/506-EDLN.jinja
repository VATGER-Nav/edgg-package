{%- set rnp = {
    "13": [
        'MHV',
        'LN400',
        'LN401',
        'SUVIG',
    ],
    "31": [
        'MHV',
        'LN600',
        'LN601',
        'GREKA',
    ]
} %}

MAP:EDLN RNP 13
FOLDER:RNAV/RNP APP
ACTIVE:RWY:ARR:EDLN13:DEP:*
COLOR:standard
SYMBOL:VOR:MHV
{%- for fx in rnp['13'] if fx not in ['MHV'] %}
SYMBOL:FIX3:{{fx}}
{%- endfor %}
ZOOM:8
FONTSIZE:=:11
TEXTALIGN:LB
{%- for fx in rnp['13'] %}
TEXT:{{fx}}:{{fx}}:5:0
{%- endfor %}

MAP:EDLN RNP 31
FOLDER:RNAV/RNP APP
ACTIVE:RWY:ARR:EDLN31:DEP:*
COLOR:standard
SYMBOL:VOR:MHV
{%- for fx in rnp['31'] if fx not in ['MHV'] %}
SYMBOL:FIX3:{{fx}}
{%- endfor %}
ZOOM:8
FONTSIZE:=:11
TEXTALIGN:LB
{%- for fx in rnp['31'] %}
TEXT:{{fx}}:{{fx}}:5:0
{%- endfor %}

MAP:EDLN ILS/VOR 13
