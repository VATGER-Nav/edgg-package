{%- for desig, hold in aar.items() %}
MAP:AAR - {{hold.desig}}
FOLDER:Military
COLOR:holding_ctr
STYLE:Solid:1
COORD_HM:{{hold.coord}}:{{hold.inbd}}M:{{hold.turn}}:{{hold.length}}:{{hold.radius}}:10
COORDPOLY:0
// Anchor Points
TEXTALIGN:LB
SYMBOL:FIX3_L:{{hold.coord}}:AP1:7:0
{{ points['TP1_' + desig] | to_symbol('FIX3_L') }}:TP1:7:0
{{ points['AP2_' + desig] | to_symbol('FIX3_L') }}:AP2:7:0
{{ points['TP2_' + desig] | to_symbol('FIX3_L') }}:TP2:7:0
{%- if 'RP_' + desig in points %}
{{ points['RP_' + desig] | to_symbol('FIX3_L') }}:RP:7:0
{%- endif %}
// Levels
FONTSIZE:=:11
TEXTALIGN:CC
{{ levels[desig] | to_text(hold.level_up) }}:0:-7
{{ levels[desig] | to_text(hold.level_lo) }}:0:8
FONTSIZE:=:12
{{ levels[desig] | to_text('---') }}:0:-1
{% endfor %}